import { createReducer, createActions } from 'reduxsauce'
import Immutable from 'seamless-immutable'

/* ------------- Types and Action Creators ------------- */

const { Types, Creators } = createActions({
  <%= camelCase(props.name) %>CreateRequest: ['data'],
  <%= camelCase(props.name) %>CreateSuccess: ['payload'],
  <%= camelCase(props.name) %>CreateFailure: null
})

export const <%= props.name %>Types = Types
export default Creators

/* ------------- Initial State ------------- */

export const INITIAL_STATE = Immutable({
  fetching: null,
  updating: null,
  deleting: null,
  creating: null,
  data: null,
  payload: null,
  error: null
})

/* ------------- Selectors ------------- */

export const <%= props.name %>Selectors = {
  getData: state => state.data
}

/* ------------- Reducers ------------- */

export const requestCreate = (state, { data }) =>
  state.merge({ creating: true, data, payload: null })

export const successCreate = (state, action) => {
  const { payload } = action
  return state.merge({ creating: false, error: null, payload })
}

export const failureCreate = state =>
  state.merge({ creating: false, error: true, payload: null })

/* ------------- Hookup Reducers To Types ------------- */

export const reducer = createReducer(INITIAL_STATE, {
  [Types.<%= snakeCase(props.name).toUpperCase() %>_CREATE_REQUEST]: requestCreate,
  [Types.<%= snakeCase(props.name).toUpperCase() %>_CREATE_SUCCESS]: successCreate,
  [Types.<%= snakeCase(props.name).toUpperCase() %>_CREATE_FAILURE]: failureCreate
})
