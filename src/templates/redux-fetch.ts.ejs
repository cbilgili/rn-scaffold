import { createReducer, createActions } from 'reduxsauce'
import Immutable from 'seamless-immutable'

/* ------------- Types and Action Creators ------------- */

const { Types, Creators } = createActions({
  <%= camelCase(props.name) %>FetchRequest: ['data'],
  <%= camelCase(props.name) %>FetchSuccess: ['payload'],
  <%= camelCase(props.name) %>FetchFailure: null
})

export const <%= props.name %>Types = Types
export default Creators

/* ------------- Initial State ------------- */

export const INITIAL_STATE = Immutable({
  fetching: null,
  updating: null,
  deleting: null,
  creating: null,
  data: null,
  payload: null,
  error: null
})

/* ------------- Selectors ------------- */

export const <%= props.name %>Selectors = {
  getData: state => state.data
}

/* ------------- Reducers ------------- */

export const requestFetch = (state, { data }) =>
  state.merge({ fetching: true, data, payload: null })

export const successFetch = (state, action) => {
  const { payload } = action
  return state.merge({ fetching: false, error: null, payload })
}

export const failureFetch = state =>
  state.merge({ fetching: false, error: true, payload: null })

/* ------------- Hookup Reducers To Types ------------- */

export const reducer = createReducer(INITIAL_STATE, {
  [Types.<%= snakeCase(props.name).toUpperCase() %>_FETCH_REQUEST]: requestFetch,
  [Types.<%= snakeCase(props.name).toUpperCase() %>_FETCH_SUCCESS]: successFetch,
  [Types.<%= snakeCase(props.name).toUpperCase() %>_FETCH_FAILURE]: failureFetch
})
