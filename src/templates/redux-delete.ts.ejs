import { createReducer, createActions } from 'reduxsauce'
import Immutable from 'seamless-immutable'

/* ------------- Types and Action Creators ------------- */

const { Types, Creators } = createActions({
  <%= camelCase(props.name) %>DeleteRequest: ['data'],
  <%= camelCase(props.name) %>DeleteSuccess: ['payload'],
  <%= camelCase(props.name) %>DeleteFailure: null
})

export const <%= props.name %>Types = Types
export default Creators

/* ------------- Initial State ------------- */

export const INITIAL_STATE = Immutable({
  fetching: null,
  updating: null,
  deleting: null,
  creating: null,
  data: null,
  payload: null,
  error: null
})

/* ------------- Selectors ------------- */

export const <%= props.name %>Selectors = {
  getData: state => state.data
}

/* ------------- Reducers ------------- */

export const requestDelete = (state, { data }) =>
  state.merge({ deleting: true, data, payload: null })

export const successDelete = (state, action) => {
  const { payload } = action
  return state.merge({ deleting: false, error: null, payload })
}

export const failureDelete = state =>
  state.merge({ deleting: false, error: true, payload: null })

/* ------------- Hookup Reducers To Types ------------- */

export const reducer = createReducer(INITIAL_STATE, {
  [Types.<%= snakeCase(props.name).toUpperCase() %>_DELETE_REQUEST]: requestDelete,
  [Types.<%= snakeCase(props.name).toUpperCase() %>_DELETE_SUCCESS]: successDelete,
  [Types.<%= snakeCase(props.name).toUpperCase() %>_DELETE_FAILURE]: failureDelete
})
